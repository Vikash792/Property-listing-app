<% layout("/layout/boilerplate.ejs") %>

<body>
    <div class="row  mt-3">
       <h3 class=" col col-6 offset-3">Sign Up on WanderLust</h3>
     <form method="POST" action="/signup" class="needs-validation col col-6 offset-3" novalidate>
      <div class=" ">
        <div>
             <label for="username" class="form-label mt-4">username</label> 
            <input type="text" name="username", placeholder="enter username" class="form-control" required>
            <div class="valid-feedback">Looks good</div>
      
        </div>
        <div>
          <label for="email" class="form-label mt-4">email</label>
          <input name="email" placeholder="Enter your Email" class="form-control" required></input>
        </div>
        <div>
          <label for="password" class="form-label mt-4">password</label>
          <input type="password" name="password" placeholder="Password" class="form-control" required>
          <div class="invalid-feedback">Price should be valid</div>

        </div>
      </div><br>
      <button class=" btn btn-success">Sign Up</button>
     </form>

    </div>
</body>