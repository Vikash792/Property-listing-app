<% layout("/layout/boilerplate.ejs") %>

<body>
  <div class="row">
    <h3>Listing Details</h3>
      <div class="card col listing-card" >
        <img class="card-img-top " src="<%=listing.image.url%>" alt="Card image cap">
        <div class="card-img-overlay">
            <h5 class="card-title"></h5>
            <p class="card-text"></p>
            <p class="card-text"></p>
        </div>

        <div class="card-body">
         <p class="card-text">
         <b>owner : </b> <i><%=listing.owner.username%></i> <Br>
          <b><%=listing.title%></b>        <br>
          
          &#x20B9;  <%=listing.price.toLocaleString("en-IN")%> /night
        </p>
        </div>
      </div>
    
    <ul>
        <li><%=listing.title%></li>
        <li><%=listing.description%></li>
        <li>&#x20B9; <%=listing.price.toLocaleString("en-IN")%></li>
        <li><%=listing.location%></li>
        <li><%=listing.country%></li>

    </ul>
    
     <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="row">
          <div class="col-4">
           <a  href="/alllisting/<%=listing._id%>/edit"> <button class=" btn btn-danger btn-outline-dark ">Edit</button></a> &nbsp;
          </div>
           <form class="col - 8" method="POST" action="/alllisting/<%=listing._id%>?_method=DELETE" >
             <button>Delete this listing</button>
           </form> <br><br>
        </div>
    <% } %>
    
    <hr>
   <div class="row ">
    <%if(currUser) { %>
    <h3>Add a review</h3>
    <form class=" needs-validation" class="review-form" novalidate  method="post" action="/alllisting/<%=listing._id%>/review">
      <div class="col-12">
       <label for="comment" class="form-label">comment</label> <br>
        <textarea class="form-control" name="review[comment]" id="comment" required></textarea>
        <div class="invalid-feedback">add comment</div>
      </div>
      <div class="col-8 mt-3">
        <label  for="rating" class="form-label">Rating</label> <br>
        <!-- <input class="form-range" type="range" min="1" max="5" name="review[rating]" ><br> <br> -->
       <fieldset class="starability-slot ">
                  <legend>First rating:</legend>
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
       </fieldset>
       <br>
      </div>
         <button class="btn btn-danger btn-outline-dark mb-3">Submit</button> 
    </form>
    <% } %>
   </div>
    <hr>
    
    <br>
    <div class="row">
      <% if(listing.review) {%>
          <% for(review of listing.review) { %>
        <div class="card col-md-5 col-sm-12 mb-3 ms-3">
           <div class="card-body">
            <div class="card-title"><h4>@<%=review.author.username%></h4></div>
            <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
            <div class="card-text"><%=review.comment%></div>
            <div class="card-text"> 
               <p>Time - <%=review.createdAt.toString().split(" ")[4]%></p>
             <p>Date - <%=review.createdAt.toString().split(" ").slice(0,4).join(" ")%></p>
             <p>Created by <i><%=review.author.username%></i></p>
            </div>

           </div>
           <form method="Post" action="/alllisting/<%=listing._id%>/review/<%=review._id%>?_method=DELETE">
               <button  class="btn btn-dark btn-sm">Delete</button>
           </form>
        </div>
      <% }%>
    <%}%>
    </div>
  </div>
</body>
